<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <div class="navbar-brand">
            <h1>アイコン</h1>
          </div>

          <ul class="navbar-nav ml-auto">
            <% if admin_signed_in? %>
              <%= link_to "商品一覧", admin_items_path, class: "btn btn-outline-secondary mr-1" %>
              <%= link_to "会員一覧", admin_customers_path, class: "btn btn-outline-secondary mr-1" %>
              <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-outline-secondary mr-1" %>
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-secondary mr-1" %>
            <% elsif customer_signed_in? %>
              <%= link_to "マイページ", customer_path(current_customer.id), class: "btn btn-outline-secondary mr-1" %>
              <%= link_to "商品一覧", items_path, class: "btn btn-outline-secondary mr-1" %>
              <%= link_to "カート", cart_items_path, class: "btn btn-outline-secondary mr-1" %>
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-outline-secondary mr-1" %>
            <% else %>
              <%= link_to "About", about_path_path, class: "btn btn-outline-secondary mr-1" %>
              <%= link_to "商品一覧", items_path, class: "btn btn-outline-secondary mr-1" %>
              <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-secondary mr-1" %>
              <%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-secondary mr-1" %>



            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <div class="container mt-5 pt-5"></div>
    </footer>
  </body>
</html>
