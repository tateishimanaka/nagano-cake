<div class="container mt-3">
  <h3>商品一覧</h3>
  <div class="row">
    <div class="col-md-1 offset-md-10">
      <h3>
        <%= link_to new_admin_item_path do %>
          <i class="fas fa-plus-circle text-secondary"></i>
        <% end %>
      </h3>
    </div>
  </div>
  <div class="mx-auto">
    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-10">
        <table class="table">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
          <% @items.each do |item| %>
            <tr>
              <td>
                <%= item.id %>
              </td>
              <td>
                <%= link_to item.name, admin_item_path(item.id), class: "text-dark" %>
              </td>
              <td>
                <%= item.price.to_s(:delimited) %>
              </td>
              <td>
                <%= item.genre.name %>
              </td>
              <td>
                <% if item.is_active == true %>
                  <div class="text-success">販売中</div>
                <% else %>
                  <div class="text-secondary">販売停止中</div>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
         <%= paginate @items %>
      </div>
      <div class="col-md-1"></div>
    </div>
  </div>
</div>
