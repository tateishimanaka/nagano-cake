<div class="container mt-3">
  <h4>
    <div class="ml-5 pl-5">
      商品詳細
    </div>
  </h4>
  <div class="row mt-5">
    <div class="col-md-4 ml-5">
      <%= attachment_image_tag @item, :image, format: 'jpeg', size: "250x250" %>
    </div>
    <div class="col-md-7">
      <table>
        <tbody>
          <tr>
            <td>
              <div class="mt-3">
                商品名
              </div>
            </td>
            <td><div class="ml-5 mt-2"></div></td>
            <td>
              <strong>
                <div class="mt-3">
                  <%= @item.name %>
                </div>
              </strong>
            </td>
          </tr>
          <tr>
            <td>
              <div class="mt-3">
                商品説明
              </div>
            </td>
            <td><div class="ml-5"></div></td>
            <td>
              <strong>
                <div class="mt-3">
                  <%= @item.introduction %>
                </div>
              </strong>
            </td>
          </tr>
          <tr>
            <td>
              <div class="mt-3">
                ジャンル
              </div>
            </td>
            <td><div class="ml-5"></div></td>
            <td>
              <strong>
                <div class="mt-3">
                  <%= @item.genre.name %>
                </div>
              </strong>
            </td>
          </tr>
          <tr>
            <td>
              <div class="mt-3">
                税込価格<br>(税抜価格)
              </div>
            </td>
            <td><div class="ml-5"></div>
            <td>
              <strong>
                <div class="mt-3">
                  <%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>円)
                </div>
              </strong>
            </td>
          </tr>
          <tr>
            <td>
              <div class="mt-3">
                販売ステータス
              </div>
            </td>
            <td><div class="ml-5"></div></td>
            <td>
              <strong>
                <div class="mt-3">
                  <% if @item.is_active == true %>
                  <div class="text-success">販売中</div>
                <% else %>
                  <div class="text-secondary">販売停止中</div>
                <% end %>
                </div>
              </strong>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="mt-5 ml-5 pl-5"><%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %></div>

    </div>
  </div>
</div>

