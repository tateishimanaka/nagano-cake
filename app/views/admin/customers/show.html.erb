<div class="container mt-3">
  <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
  <table>
    <tbody>
      <tr>
        <td>
          <div class="mt-3">
            会員ID
          </div>
        </td>
        <td>
          <div class="ml-5 mt-3">
        </td>
        <td>
          <div class="mt-3">
            <%= @customer.id %>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <div class="mt-3">
            氏名
          </div>
        </td>
        <td><div class="ml-5 mt-3"></div></td>
        <td>
          <div class="mt-3">
            <%= @customer.last_name %><span class="ml-3"></span><%= @customer.first_name %>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <div class="mt-3">
            フリガナ
          </div>
        </td>
        <td><div class="ml-5 mt-3"></div></td>
        <td>
          <div class="mt-3">
            <%= @customer.last_name_kana %><span class="ml-3"></span><%= @customer.first_name_kana %>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <div class="mt-3">
            郵便番号
          </div>
        </td>
        <td><div class="ml-5 mt-3"></div></td>
        <td>
          <div class="mt-3">
            <%= @customer.postal_code %>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <div class="mt-3">
            住所
          </div>
        </td>
        <td><div class="ml-5 mt-3"></div></td>
        <td>
          <div class="mt-3">
            <%= @customer.address %>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <div class="mt-3">
            電話番号
          </div>
        </td>
        <td><div class="ml-5 mt-3"></div></td>
        <td>
          <div class="mt-3">
            <%= @customer.telephone_number %>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <div class="mt-3">
            メールアドレス
          </div>
        </td>
        <td><div class="ml-5 mt-3"></div></td>
        <td>
          <div class="mt-3">
            <%= @customer.email %>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <div class="mt-3">
            会員ステータス
          </div>
        </td>
        <td><div class="ml-5 mt-3"></div></td>
        <td>
          <div class="mt-3">
            <%= @customer.is_deleted ? '退会' : '有効' %>
          </div>
        </td>
      </tr>
      <tr>
        <td></td>
        <td><div class="ml-5"></div></td>
        <td>
          <div class="mt-3">
            <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
          </div>
        </td>
        <td>
          <div class="mt-3">
            <%= link_to "注文一覧を見る", admin_root_path, class: "btn btn-info" %>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
</div>



