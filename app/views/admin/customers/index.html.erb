<div class="container mt-3">
  <h4 class="ml-5 pl-5">会員一覧</h4>
  <div class="row mt-5">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <table class="table mr-5 pr-5">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer.id) do %>
                  <%= customer.last_name %><%= customer.first_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted == false %>
                  <div class="text-success"><strong>有効</strong></div>
                <% else %>
                  <div class="text-secondary"><strong>退会</strong></div>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-1"></div>
  </div>
</div>
<%= paginate @customers %>