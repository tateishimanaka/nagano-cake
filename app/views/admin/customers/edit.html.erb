<div class="container mt-3">
  <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
  <%= form_with model: @customer, url: admin_customer_path(@customer.id), local:true do |f| %>
  <table>
    <tbody>
      <tr>
        <div class="form-group">
          <td>
            会員
          </td>
          <td>
            <div class="ml-3">
              <%= @customer.id %>
            </div>
          </td>
        </div>
      </tr>
      <tr>
        <div class="form-group mt-3">
          <td>
            <label for="name" class="mt-3">
              氏名
            </label>
          </td>
          <td>
            <div class="ml-3 mt-3">
              <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
            </div>
          </td>
          <td>
            <div class="ml-3 mt-3">
              <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
            </div>
          </td>
        </div>
      </tr>
      <tr>
        <div class="form-group mt-3">
          <td>
            <label for="name_kana" class="mt-3">
              フリガナ
            </label>
          </td> 
          <td>
            <div class="ml-3 mt-3">
              <%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %>
            </div>
          </td>
          <td>
            <div class="ml-3 mt-3">
              <%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %>
            </div>
          </td>
        </div>
      </tr>
      <tr>
        <div class="form-group mt-3">
          <td>
            <label for="postal_code" class="mt-3">
              郵便番号
            </label>
          </td>
          <td>
            <div class="ml-3 mt-3">
              <%= f.text_field :postal_code, autofocus: true, class: "form-control" %>
            </div> 
          </td>
        </div>
      </tr>
      <tr>
        <div class="form-group mt-3">
          <td>
            <label for="address" class="mt-3">
              住所
            </label>
          </td>
          <td>
            <div class="ml-3 mt-3">
              <%= f.text_field :address, autofocus: true, class: "form-control", class: "form-control" %>
            </div>
          </td>
        </div>
      </tr>
      <tr>
        <div class="form-group mt-3">
          <td>
            <label for="telephone">
              電話番号
            </label>
          </td>
          <td>
            <div class="ml-3 mt-3">
              <%= f.text_field :telephone_number, autofocus: true, class: "form-control" %>
            </div>
          </td>
        </div>
      </tr>
      <tr>
        <div class="form-group">
          <td>
            <label for="email" class="mt-3">
              メールアドレス
            </label>
          </td>
          <td>
            <div class="ml-3 mt-3">
              <%= f.text_field :email, autofocus: true, class: "form-control" %>
            </div>
          </td>
        </div>
      </tr>
      <tr>
        <div class="form-group">
          <td>
            <label for="status" class="mt-3">
              会員ステータス
            </label>
          </td>
          <td>
            <div class="ml-3 mt-3">
              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, "退会", value: true %>
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, "有効", value: false %>
            </div>
          </td>
        </div>
      </tr>
      <tr>
        <td></td>
        <td>
          <div class="ml-3 mt-3">
            <%= f.submit "変更を保存", class: "btn btn-success" %>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
  <% end %>
</div>

