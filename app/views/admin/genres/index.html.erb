<div class="container mt-3">
<h4 class="ml-5 pl-5">ジャンル一覧・追加</h4>
<div class="row mt-5 ml-3">
  <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
  <table>
  
  <tbody>
    <tr>
      <td>
        <div class="mr-5">
          <strong>ジャンル名</strong>
        </div>
      </td>
      <td>
        <div class="mr-5">
          <%= f.text_field :name, autofocus: true , placeholder:"ジャンル" %>
        </div>
      </td>
      <td>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </td>
    </tr>
  </tbody>
</table>
<% end %>
</div>

<div class="row mt-5">
  <div class="col-md-4">
    <table class="table">
      <thead>
        <tr>
          <th>
            <div class="mr-5">
              ジャンル
            </div>
          </th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <div class="mr-5">
                <%= genre.name %>
              </div>
            </td>
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
