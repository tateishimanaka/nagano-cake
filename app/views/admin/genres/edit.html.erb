<div class="container mt-3">
  <h4 class="ml-5 pl-5">ジャンル編集</h4>
  <div class="row mt-5">
    <%= form_with model: @genre, url: admin_genre_path(@genre.id), local:true do |f| %>
    <table>
      <tbody>
        
        <tr>
          <td>
            <div class="mr-5">
              ジャンル名
            </div>
          </td>
          <td>
            <div class="mr-5">
              <%= f.text_field :name %>
            </div>
          </td>
          <td>
            <%= f.submit "変更を保存", class: "btn btn-success" %>
          </td>
        </tr>
      
      </tbody>
    </table>
    <% end %>
  </div>
</div>

