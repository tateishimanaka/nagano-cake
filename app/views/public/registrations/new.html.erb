<div class="container">
  <h4>新規会員登録</h4>
  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <table>
      <tbody>
        <tr>
          <div class="form-group">
            <td>
              <label for="name">名前</label>
            </td>
            <td>
              <div class="ml-3">
                (姓)  <%= f.text_field :last_name, autofocus: true,placeholder:"令和" %>
              </div>
            </td>
            <td>
              <div class="ml-3">
                (名)  <%= f.text_field :first_name, autfocus: true,placeholder:"道子" %>
              </div>
            </td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <td>
              <label for="name_kana">フリガナ</label>
            </td>
            <td>
              <div class="ml-3">
                (セイ)<%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ" %>
              </div>
            </td>
            <td>
              <div class="ml-3">
                (メイ)<%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ" %>
              </div>
            </td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <td>
              <label for="email">メールアドレス</label>
            </td>
            <td>
              <div class="ml-3">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholedr: "sample@example.com" %>
              </div>
            </td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <td>
              <label for="postal_code">郵便番号(ハイフンなし)</label>
            </td>
            <td>
              <div class="ml-3">
                <%= f.text_field :postal_code, autofocus: true, placeholder:"0000000" %>
              </div>
            </td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <td>
              <label for="address">住所</label>
            </td>
            <td>
              <div class="ml-3">
                <%= f.text_field :address, autofocus: true, placeholder:"東京都渋谷区代々木神園町", class: "<form-control></form-control>" %>
              </div>
            </td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <td>
              <label for="telephone">電話番号(ハイフンなし)</label>
            </td>
            <td>
              <div class="ml-3">
                <%= f.text_field :telephone_number, autofocus: true, placeholder:"0000000000" %>
              </div>
            </td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <td>
              <label for="passward">パスワード(6文字以上)</label>
            </td>
            <td>
              <div class="ml-3">
                <!--<% if @minimum_password_length %>-->
                  <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
                <!--<% end %><br />-->
                <%= f.password_field :password, autocomplete: "new-password" %>
              </div>
            </td>
          </div>
        </tr>
        <tr>
          <td>
            <label for="passward">パスワード(確認用)</label>
          </td>
          <td>
            <div class="ml-3">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </td>
        </tr>
        <tr>
          <div class="form-group">
            <td></td>
            <td>
              <div class="ml-3">
                <%= f.submit "新規登録", class: "btn btn-success" %>
              </div>
            </td>
          </div>
        </tr>
      </tbody>
    </table>
    <% end %>
  </div>
  <h4 class="mt-4">既に登録済みの方</h4>
    <div class="row">
      <div class="col-md-9 offset-md-1">
        <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
      </div>
    </div>
</div>

