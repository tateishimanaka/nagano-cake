<div class="container mt-3">
  <h4>マイページ</h4>
  <div class="row ml-1">
    <table>
      <tbody>
        <tr>
          <td>
            <h4>
              登録情報
            </h4>
          </td>
          <td>
            <div class="ml-3">
              <%= link_to "編集する", edit_customers_path, class: "btn btn-success" %>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row mt-3">
    <div class="col-md-5">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row" class="table-secondary">氏名</th>
            <th scope="row">
              <%= @customer.last_name %><span class="ml-2"></span><%= @customer.first_name %>
            </th>
          </tr>
          <tr>
            <th scope="row" class="table-secondary">カナ</th>
            <th scope="row">
              <%= @customer.last_name_kana %><span class="ml-2"></span><%= @customer.first_name_kana %>
            </th>
          </tr>
          <tr>
            <th scope="row" class="table-secondary">郵便番号</th>
            <th scope="row">
              <%= @customer.postal_code %>
            </th>
          </tr>
          <tr>
            <th scope="row" class="table-secondary">住所</th>
            <th scope="row">
              <%= @customer.address %>
            </th>
          </tr>
          <tr>
            <th scope="row" class="table-secondary">電話番号</th>
            <th scope="row">
              <%= @customer.telephone_number %>
            </th>
          </tr>
          <tr>
            <th scope="row" class="table-secondary">メールアドレス</th>
            <th scope="row">
              <%= @customer.email %>
            </th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
  <div class="row">
    <table>
      <tbody>
        <tr>
          <td>
            <div class="mr-5 ml-3">
              <h5>配送先</h5>
            </div>
          </td>
          <td>
            <%= link_to "一覧を見る", addresses_path, class: "btn btn-info" %>
          </td>
        </tr>
        <tr>
          <td>
            <div class="mt-3 ml-3">
              <h5>注文一覧</h5>
            </div>
          </td>
          <td>
            <div class="mt-3">
              <%= link_to "一覧を見る", orders_path, class: "btn btn-info" %>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
</div>