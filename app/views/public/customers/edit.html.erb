<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h4>会員情報編集</h4>
      <%= form_with model: @customer, url: customers_path, local:true do |f| %>
      <form>
        <div class="form-growp row">
          <label for="name" class="col-md-2 col-form-label">氏名</label>
          <div class="col-md-3">
            <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
          </div>
          <div class="col-md-3">
            <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
          </div>
        </div>
      </form>
      <% end %>
    </div>
  </div>
</div>