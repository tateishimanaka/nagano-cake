<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h4>注文情報確認</h4>
      <table class="table table-bordered">
        <thead>
          <tr class="table-secondary">
            <th scope="col">商品名</th>
            <th scope="col">単価(税込)</th>
            <th scope="col">数量</th>
            <th scope="col">小計</th>
          </tr>
          <tr>
            <% @cart_items.each do |cart_item| %>
            <tbody>
              <td scope="row">
                <%= cart_item.item.name %>
              </td>
              <td scope="row">
                <%= cart_item.item.add_tax_price.to_s(:delimited) %>
              </td>
              <td scope="row">
                <%= cart_item.amount %>
              </td>
              <td scope="row">
                <%= cart_item.subtotal %>
              </td>
            </tbody>
            <% end %>
          </tr>
        </thead>
      </table>
    </div>
    <div class="col-md-4 offset-md-1">
      <table class="table table-bordered">
        <tr>
          <th scope="row">送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th scope="row">商品合計</th>
          <td>
            <%= @order.total_price.to_s(:delimited) %>
          </td>
        </tr>
        <tr>
          <th scope="row">請求金額</th>
          <td>
            <%= @order.total_price + @order.postage %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <h5><strong>支払方法</strong></h5>
    <%= @order.payment_method %>
  </div>
  <div class="row">
    <h5><strong>お届け先</strong></h5>
    〒<%= @order.postal_code %><%= @order.address %><br>
    <%= @order.name %>
  </div>
</div>