<div class="container">
  <div class="row">
    <h5>注文履歴一覧</h5>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col">注文日</th>
          <th scope="col">配送先</th>
          <th scope="col">注文商品</th>
          <th scope="col">支払金額</th>
          <th scope="col">ステータス</th>
          <th scope="col">注文詳細</th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td scope="row">
            <%= order.created_at.strftime('%Y/%m/%d') %>
          </td>
          <td scope="row">
            〒<%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td>
          <% order.order_items.each do |order_item| %>
            <%= order_item.item.name %><br>
          <% end %>
          </td>
          <td>
            <%= order.total.to_s(:delimited) %>
          </td>
          <td>
            <%= order.payment_method_i18n %>
          </td>
          <td>
            <%= link_to "表示する", order_path(order.id), class: "btn btn-info" %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>