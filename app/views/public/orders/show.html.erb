<div class="container">
  <h4>注文履歴詳細</h4>
  <div class="row">
    <div class="col-md-5">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row" class="table-secondary">注文日</th>
            <th scope="row">
              <%= @order.created_at.strftime('%Y/%m/%d') %>
            </th>
          </tr>
          <tr>
            <th scope="row" class="table-secondary">配送先</th>
            <th scope="row">
              〒<%= @order.postal_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </th>
          </tr>
          <tr>
            <th scope="row" class="table-secondary">支払方法</th>
            <th scope="row">
              <%= @order.payment_method %>
            </th>
          </tr>
          <tr>
            <th scope="row" class="table-secondary">ステータス</th>
            <th scope="row"></th>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-4 offset-md-1">
      <table class="table table-bordered">
        <tr>
          <th scope="row" class="table-secondary">商品合計</th>
          <th scope="row">
            <%= @order.total_price.to_s(:delimited) %>
          </th>
        </tr>
        <tr>
          <th scope="row" class="table-secondary">配送料</th>
          <th scope="row">
            <%= @order.postage %>
          </th>
        </tr>
        <tr>
          <th scope="row" class="table-secondary">ご請求額</th>
          <th scope="row">
            <%= @order.total.to_s(:delimited) %>
          </th>
        </tr>
      </table>
    </div>
  </div>
  <h5>注文内容</h5>
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col" class="table-secondary">商品</th>
            <th scope="col" class="table-secondary">単価(税込)</th>
            <th scope="col" class="table-secondary">個数</th>
            <th scope="col" class="table-secondary">小計</th>
          </tr>
        </thead>
        <% @order_items.each do |order_item| %>
        <tbody>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.item.add_tax_price.to_s(:delimited) %></td>
            <td><%= order_item.amount %></td>
            <td><%= order_item.subtotal.to_s(:delimited) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>