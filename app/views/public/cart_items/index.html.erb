<div class="container">
  <div class="row">
    <h4>ショッピングカート</h4>
    <div class="col-md-10">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th scope="col">商品名</th>
            <th scope="col">単価(税込み)</th>
            <th scope="col">数量</th>
            <th scope="col">小計</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <% @cart_items.each do |cart_item| %>
        <tbody>
          <tr>
            <td scope="row">
              <%= attachment_image_tag cart_item.item, :image, format: 'jpeg', size: "90x70" %>
              <%= cart_item.item.name %>
            </td>
            <td scope="row">
              <%= cart_item.item.add_tax_price.to_s(:delimited) %>
            </td>
            <td scope="row">
              <%= form_with model:cart_item, url: cart_item_path(cart_item.id), local:true do |f| %>
                <%= f.select :amount, *[1..10] %>
                <%= f.submit "変更", class: "btn btn-success" %>
              <% end %>
            </td>
            <td>
              <%= cart_item.subtotal %>
              <% @total += cart_item.subtotal %>
            </td>
            <td>
              <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-4">
      <%= link_to "買い物を続ける", items_path, class: "btn btn-info" %>
    </div>
    <div class="col-md-4 offset-md-4">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="table-secondary">合計金額</td>
            <td><%= @total %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <% if @cart_items.count >= 1 %>
        <%= link_to "情報入力に進む", order_comfilm_path, class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>