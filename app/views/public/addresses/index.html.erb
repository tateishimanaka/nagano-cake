<div class="container">
  <div class="row">
    <h4 class="ml-5">配送先一覧</h4>
  </div>
    <%= form_with model:@address, url: addresses_path, local:true do |f| %>
    <form>
      <div class="form-group row mt-4">
        <label for="postal-code" class="col-md-3 col-form-label">郵便番号(ハイフンなし)</label>
        <div class="col-md-3">
          <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000", class: "form-control" %>
        </div>
      </div>
      <div class="form-group row mt-3">
        <label for="address" class="col-md-3 col-form-label">住所</label>
        <div class="col-md-6">
          <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0－0", class: "form-control" %>
        </div>
      </div>
      <div class="form-growp row mt-3">
        <label for="name" class="col-md-3 col-form-label">宛名</label>
        <div class="col-md-3">
          <%= f.text_field :name, autofocus: true, placeholder: "令和道子", class: "form-control" %>
        </div>
        <div class="col-md-3"></div>
        <div class="col-md-3">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      </div>
    </form>
    <% end %>
    <div class="row mt-5">
      <div class="col-md-7">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">郵便番号</th>
              <th scope="col">住所</th>
              <th scope="col">宛名</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% @addresses.each do |address| %>
            <tr>
              <td>
                <%= address.postal_code %>
              </td>
              <td>
                <%= address.address %>
              </td>
              <td>
                <%= address.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
                <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>