<div class="container">
  <div class="row">
    <h4>配送先編集</h4>
  </div>
    <%= form_with model: @address, url: address_path(@address.id), local:true do |f| %>
      <form>
        <div class="form-growp row mt-4">
          <label foe="postal-code" class="col-md-3 col-form-label">郵便番号(ハイフンなし)</label>
          <div class="col-md-3">
            <%= f.text_field :postal_code, autofocus: true, class: "form-control" %>
          </div>
        </div>
        <div class="form-growp row mt-3">
          <label for="address" class="col-md-3 col-form-label">住所</label>
          <div class="col-md-6">
            <%= f.text_field :address, autofocus: true, class: "form-control" %>
          </div>
        </div>
        <div class="form-growp row mt-3">
          <label for="name" class="col-md-3 col-form-label">宛名</label>
          <div class="col-md-3">
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>
          <div class="col-md-3"></div>
          <%= f.submit "変更内容を保存", class: "btn btn-success" %>
        </div>
      </form>
    <% end %>
</div>