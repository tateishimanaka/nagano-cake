<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-9">
      <h4>商品一覧</h4><P>(全<%= @items.count %>件)</P>
      <% @items.each do |item| %>
        <div class="image">
          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item, :image, format: 'jpeg', size: "120x100" %>
          <% end %>
        </div>
        <div class="name">
           <%= item.name %>
        </div>
        <div class="price">
          ￥<%= item.add_tax_price.to_s(:delimited) %>
        </div>
      <% end %>
    </div>
  </div>
</div>