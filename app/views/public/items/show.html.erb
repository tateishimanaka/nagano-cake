<div class="container">
  <div class="row mt-4">
    <div class="col-md-2">
      <%= render 'public/homes/list', genres: @genres %>
    </div>
    <div class="col-md-3 offset-md-1">
      <%= attachment_image_tag @item, :image, format: 'jpeg', size: "250x250" %>
    </div>
    <div class="col-md-5">
      <h3><strong><%= @item.name %></strong></h3>
      <h5 class="mt-3">
        <strong>
          <%= @item.introduction %>
        </strong>
      </h5>
      <div class="mt-5 pt-3">
      <strong class="price">
        ￥<%= @item.add_tax_price.to_s(:delimited) %>(税込み)
      </strong>
      </div>
      <%= form_with model:@cart_item, url: cart_items_path, local:true do |f| %>
        <%= f.hidden_field :item_id, value: @item.id %>
        <div class="mt-4">
          <%= f.select :amount,  *[1..10], include_blank: "個数を選択してください" %>
          <%= f.submit "カートに入れる", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>